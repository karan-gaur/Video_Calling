<div style="background-image: url('images/c.jpg');background-repeat: no-repeat;" >

  <h2 class="card-header text-white text-center">Contact Us</h2><br>

<form class="form-sigin" method="post" style="background-color: transparent; text-align: center">
    {{#each errorMessages}}
    <div class="alert alert-danger"> 
            {{this.msg}}
    </div>
    {{/each}}
  <div class="form-group">
    <h4>Name</h4>
    <input type="text" class="form-control" name="name" value="{{name}}" placeholder="Your Name">
  </div>

  <div class="form-group">
    <h4>Email address</h4>
    <input type="email" name="email" class="form-control" value="{{email}}" placeholder="Enter email">
  </div>
  <div class="form-group">
    <h4>Message</h4>
    <textarea class="form-control" name="message" rows="5">{{message}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

</div>